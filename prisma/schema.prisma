// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Person {
  id        String @id @default(uuid())
  firstName String
  lastName  String?
  gender    String?
  birthdate DateTime?
  phone     String?
  email     String?
  street1   String?
  street2   String?
  city      String?
  state     String?
  zip       String?
  createdAt DateTime @default(now()) @db.Timestamptz()
  student   Student?
}

model Student {
  personId    String @unique
  person      Person @relation(fields: [personId], references: [id])
  hsGradYear  Int?
  school      String?
}

model User {
  userId String @id @default(uuid())
  firstName String
  lastName String
  email String
  password String
}

model Event {
  eventId String @id @default(uuid())
  name String
  start String?
  end String?
}